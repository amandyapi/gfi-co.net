{% extends 'layout-fr.html.twig' %}

{% block title %}Projets
{% endblock %}

{% block content %}
<section class="page-title page-title-layout1 bg-overlay bg-parallax">
    <div class="bg-img"><img src="{{ asset('assets/images/page-titles/9.jpg') }}" alt="background"></div>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-9">
          <h1 class="pagetitle__heading">Nos Projets</h1>
        </div>
      </div>
    </div>
  </section>
  
  <section class="portfolio-grid">
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-12">
            <ul class="portfolio-filter d-flex flex-wrap justify-content-center list-unstyled">
              <li><a class="filter active" href="#" data-filter="all">TOUTES LES OEUVRES</a></li>
              <li><a class="filter" href="#" data-filter=".filter-concepts-eco">Concepts écologiques</a></li>
              <li><a class="filter" href="#" data-filter=".filter-concepts-projets">Concepts projets</a></li>
              <li><a class="filter" href="#" data-filter=".filter-projets-construction">Projets de construction</a></li>
              <li><a class="filter" href="#" data-filter=".filter-renovations-finition">Rénovations & finitions</a></li>
              <li><a class="filter" href="#" data-filter=".filter-genie-civil">Autres travaux & Génie Civil</a></li>
            </ul><!-- /.portfolio-filter  -->
          </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->
        <div id="filtered-items-wrap" class="row">
          <!-- portfolio item #1 -->
        {% for p in projects %}
          <div class="{{"col-sm-6 col-md-6 col-lg-4 mix "~ p.filter}}">
            <div class="portfolio-item">
            
              <div class="portfolio-item__img">
                <img src="{{ asset(p.image) }}" alt="portfolio img" style="widtH: 336px;height: 189px;">
              </div><!-- /.portfolio-img -->

              <div class="portfolio-item__hover">
                <div class="portfolio-item__content">
                  <h4 class="portfolio-item__title"><a href="{{ path('gfi-project-grid-info', { 'lang': 'fr','slug': p.slug }) }}">{{p.title}}</a></h4>
                  <div class="portfolio-item__cat">
                    <a href="#">{{p.category}}</a>
                  </div>
                </div>
              </div>

            </div>
          </div>
        {% endfor %}
        </div>
        
      </div><!-- /.container -->
    </section><!-- /.portfolio grid -->

    <section class="page-title page-title-layout1 bg-overlay bg-parallax">
      <div class="bg-img"><img src="{{ asset('assets/images/page-titles/' ~ devisUrl) }}" alt="background"></div>
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-12 col-xl-9">
            <h1 class="pagetitle__heading">Accédez au formulaire de demande de devis en un clic</h1>
            <a href="{{ path('gfi-devis', { 'lang': 'fr' }) }}" class="btn btn__primary btn__lg mb-30">
              <i class="icon-arrow-right1"></i><span>Formulaire de Devis</span>
            </a>
          </div>
        </div>
      </div>
    </section>
{% endblock %}