		<section class="text-content pt-20 pb-30">
			<div class="container">
				<div class="row">
					{% if projet.specifications != "" or projet.area != ""  %}
					<div class="col-sm-12 col-md-12 col-lg-4 offset-lg-1">
						<div class="text__block">
							<h5 class="text__block-title mb-10">Description
								{{title}}</h5>
							{% if projet.area.floor != "" or projet.area.land != "" %}
							<ul class="portfolio-item__meta-list list-unstyled mt-10 mb-30">
								{% if projet.area.land != "" %}
								<li>
									<strong>Superficie de Terrain:</strong>
									<span>
										{{ projet.area.land }}</span>
								</li>
								{% endif %}
								{% if projet.area.floor != "" %}
								<li>
									<strong>Superficie Batie au sol:</strong>
									<span>
										{{ projet.area.floor }}</span>
								</li>
								{% endif %}
							</ul>
							{% endif %}
							{% if rdc|length > 0  %}
							<h5 class="text__block-title mb-10">RDC</h5>
							<ul class="list-items list-unstyled mt-20">
								{% if rdc.description != "" %}
									<span>{{rdc.description}}</span>
								{% endif %}
								{% for r in rdc %}
									<li>{{r}}</li>
								{% endfor %}
							</ul>
							{% endif %}
						</div>
					</div>
					{% endif %}

					<div class="col-sm-12 col-md-12 col-lg-4">
						<div class="text__block">
							<h5 class="text__block-title mb-10" style="visibility: hidden"></h5>
							<ul class="portfolio-item__meta-list list-unstyled mt-10 mb-30" style="visibility: hidden">
								<li>
									<strong>Superficie de Terrain:</strong>
									<span>0 m²</span>
								</li>
								<li>
									<strong>Superficie Batie au sol:</strong>
									<span>7 m²</span>
								</li>
							</ul>
							{% if etage|length > 0  %}
							<h5 class="text__block-title mb-10">R+1</h5>
							<ul class="list-items list-unstyled mt-20">
								{% if etage.description != "" %}
									<span class="desc-spec-title">{{etage.description}}</span>
								{% endif %}
								{% for e in etage %}
									<li>{{e}}</li>
								{% endfor %}
							</ul>
							{% endif %}
						</div>
					</div>
					{% if etage2|length > 0 %}
						<div class="col-sm-12 col-md-12 offset-lg-1 col-lg-4">
							<div class="text__block">
								<h5 class="text__block-title mb-10" style="visibility: hidden"></h5>
								<ul class="portfolio-item__meta-list list-unstyled mt-10 mb-30" style="visibility: hidden">
									<li>
										<strong>Superficie de Terrain:</strong>
										<span>0 m²</span>
									</li>
								</ul>
								<h5 class="text__block-title mb-10">R+2</h5>
								<ul class="list-items list-unstyled mt-20">
									{% if etage2.description != "" %}
										<span class="desc-spec-title">{{etage2.description}}</span>
									{% endif %}
									{% for e in etage2 %}
										<li>{{e}}</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					{% endif %}

				</div>

				<div class="row">
					{% if etage3|length > 0 %}
						<div class="col-sm-12 col-md-12 offset-lg-0 col-lg-4">
							<div class="text__block">
								<h5 class="text__block-title mb-10" style="visibility: hidden"></h5>
								<ul class="portfolio-item__meta-list list-unstyled mt-10 mb-30" style="visibility: hidden">
									<li>
										<strong>Superficie de Terrain:</strong>
										<span>0 m²</span>
									</li>
								</ul>
								<h5 class="text__block-title mb-10">R+3</h5>
								<ul class="list-items list-unstyled mt-20">
									{% for e in etage3 %}
										<li>{{e}}</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					{% endif %}
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container -->
		</section>
		<!-- /.Text Content -->
	<br>

	{% if pictures|length > 0 %}
	<section class="portfolio-gallery py-0">
		<div class="container">
			<div class="row">
				{% for p in pictures %}
					<!-- portfolio item #1 -->
					<div class="col-sm-6 col-md-6 col-lg-4">
						<div class="portfolio-item">
							<div class="portfolio-item__img">
								<a class="popup-gallery-item" href="{{ asset(p) }}">
									<img src="{{ asset(p) }}" alt="portfolio img">
								</a>
							</div>
							<!-- /.portfolio-img -->
						</div>
						<!-- /.portfolio-item -->
					</div>
					<!-- /.col-lg-4 -->
				{% endfor %}
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container -->
	</section>
	{% endif %}


	<a style="margin: 20% 10% !important;" href="{{ path('gfi-project-grid', { 'lang': 'fr' }) }}">
		<i class="icon-arrow-left1"></i>
		Retour
	</a>
{% endblock %}
