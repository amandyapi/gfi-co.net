{% extends 'layout-fr.html.twig' %}

{% block title %}Projets
{% endblock %}

{% block content %}
	<section class="page-title page-title-layout1 bg-overlay bg-parallax">
		<div class="bg-img">
				<img src="{{ asset('assets/images/page-titles/9.jpg') }}" alt="background">
		</div>
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-12 col-lg-12 col-xl-9">
					<h1 class="pagetitle__heading">{{projet.title}}</h1>
				</div>
			</div>
		</div>
	</section>

	{% if projet.video != "" %}
		<section class="portfolio-single pt-30 pb-10">
			<div class="container">
				<div class="row">
					<div class="col-sm-12 col-md-12 col-lg-12">
						<div class="portfolio-item">
							<div class="video-banner text-center mb-20">
								<video src="{{ asset(projet.video) }}" controls autoplay="true" style="width: 75%"></video>
							</div>

						</div>
						<!-- /.portfolio-item  -->
					</div>
					<!-- /.col-lg-12 -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container -->
		</section>
		<!-- /.portfolio single -->
	{% endif %}

