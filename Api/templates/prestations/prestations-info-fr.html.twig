{% extends 'layout-fr.html.twig' %}

{% block title %}Prestations
{% endblock %}

{% block content %}
	<section class="page-title page-title-layout1 bg-overlay bg-parallax">
		<div class="bg-img"><img src="{{ asset('assets/images/page-titles/7.jpg') }}" alt="background"></div>
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-12 col-lg-12 col-xl-9">
					<h1 class="pagetitle__heading">{{prestation.title}}</h1>
				</div>
			</div>
		</div>
	</section>

	<section class="text-content-section pb-90">
		<div class="container">
			<div class="row">
                <div class="col-sm-12 col-md-12 col-lg-4">
                    <aside class="sidebar mb-30">
                        <div class="widget widget-categories">
                            <h5 class="widget__title">Services</h5>
                            <div class="widget-content">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#" class="active">Architecture & building</a>
                                    </li>
                                    <li>
                                        <a href="#">Construction Consultants</a>
                                    </li>
                                    <li>
                                        <a href="#">Construction Management</a>
                                    </li>
                                    <li>
                                        <a href="#">Tiling And Painting</a>
                                    </li>
                                    <li>
                                        <a href="#">Planning And Scheduling</a>
                                    </li>
                                    <li>
                                        <a href="#">Design Build Contracts</a>
                                    </li>
                                </ul>
                            </div>
                            <!-- /.widget-content -->
                        </div>
                        <!-- /.widget-categories -->

                        <div class="widget widget-download">
                            <h5 class="widget__title">Download</h5>
                            <div class="widget-body">
                                <a href="#" class="btn btn__secondary btn__block mb-20">
                                    <span>Company Report 2020</span>
                                    <img src="assets/images/icons/pdf.png" alt="pdf">
                                </a>
                                <a href="#" class="btn btn__primary btn__block">
                                    <span>Company Brochure</span>
                                    <img src="assets/images/icons/pdf.png" alt="pdf">
                                </a>
                            </div>
                            <!-- /.widget-content -->
                        </div>
                        <!-- /.widget-download -->
                    </aside>
                </div>
				<div class="col-sm-12 col-md-12 col-lg-8">
					<div class="portfolio-grid-layout2">
						<div class="row">
							<div class="video-banner mb-50">
								<img src="{{ asset(prestation.image) }}" alt="">
							</div>
						</div>
					</div>
					<!-- /.portfolio-grid-layout2 -->
					<div class="text__block mb-30">
                    {% if prestation.id == 6 %}
                        {% for customContent in prestation.customContent %}
                        <ul class="list-items list-unstyled mb-20 mt-20">
							<li>{{customContent.ul}}</li>
						</ul>

                        <p class="text__block-desc" style="font-size: 13pt; text-align: justify">
							{{customContent.text}}
						</p>
                        {% endfor %}
                    {% else %}
                        {% for content in prestation.content %}
                        <p class="text__block-desc" style="font-size: 13pt; text-align: justify">
							{{content}}
						</p>
                        {% endfor %}
                    {% endif %}
					</div>

				</div>
				<!-- /.col-lg-8 -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container -->
	</section>
	<!-- /.Text Content Section -->

{% endblock %}
