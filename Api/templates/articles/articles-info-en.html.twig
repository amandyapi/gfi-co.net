{% extends 'layout-en.html.twig' %}

{% block title %}News
{% endblock %}

{% block fb %}
<meta property="og:url"           content="http://{{serverName}}/{{lang}}/articles/{{article.slug}}" />
  <meta property="og:type"          content="website" />
  <meta property="og:title"         content="{{article.title}}" />
  <meta property="og:description"   content="{{article.content|striptags|slice(0,100)}}..." />
  <meta property="og:image"         content="http://{{serverName}}/assets/images/favicon/favicon.png" />
{% endblock %}

{% block content %}

	<section class="blog blog-single pt-100 pb-40">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-12 col-lg-4">
					<aside class="sidebar mb-30">
						<div class="widget widget-search">
                			<h5 class="widget__title">Our Magazine</h5>
							<div class="widget__content">
								<a href="{{ asset('assets/pdf/gfi-co_real_estate.pdf') }}" title="GFI-CO Magazine " class="btn btn__primary btn__block">
                                    <span>Download</span>
                                    <img src="{{ asset('assets/images/icons/pdf.png') }}" alt="pdf">
                                </a>
							</div><!-- /.widget-content -->
						</div><!-- /.widget-search -->	
						<!-- /.widget-search -->
						<div class="widget widget-posts">
							<h5 class="widget__title">Recent articles</h5>
							<div class="widget__content">
								<div class="slick-carousel" data-slick='{"slidesToShow": 1, "autoplay": true, "arrows": false, "dots": true}'>
									<!-- post item #1 -->
                                    {% for recent in recentArticles %}
									<div class="widget-post-item">
										<div class="widget-post__img">
											<a href="#"><img src="{{ asset('assets/uploads/articles/') }}{{recent.picture}}" alt="thumb"></a>
										</div>
										<!-- /.widget-post-img -->
										<div class="widget-post__content">
											<span class="widget-post__date">{{recent.createTime|date("d-m-Y")}}</span>
											<h6 class="widget-post__title">
												<a href="{{ path('gfi-article-info', { 'lang': lang, 'slug': recent.slug }) }}">
                                                {{recent.content|striptags|slice(0,133)|raw}}...
                                                </a>
											</h6>
										</div>
										<!-- /.widget-post-content -->
									</div>
                                    {% endfor %}
									<!-- /.widget-post-item -->
                                    
								</div>
								<!-- /.carousel -->
							</div>
							<!-- /.widget-content -->
						</div>
						<!-- /.widget-posts -->
						
					</aside>
					<!-- /.sidebar -->
				</div>
				<!-- /.col-lg-4 -->
				<div class="col-sm-12 col-md-12 col-lg-8">
					<div class="post-item mb-0">
						<div class="post-item__meta d-flex align-items-center">
							<div class="post-item__meta__cat">
								<a href="#">{{article.category}}</a>
							</div>
							<!-- /.blog-meta-cat -->
							{# <span class="post-item__meta__author">By:
								<a href="#">Mike Dooley</a>
							</span> #}
							<span class="post-item__meta__date">{{article.createTime|date("d-m-Y")}}</span>
						</div>
						<!-- /.blog-meta -->
						<h1 class="post-item__title">{{article.title}}</h1>
						<div class="post-item__img">
							<a href="#">
								<img src="{{ asset('assets/uploads/articles/') }}{{article.picture}}" alt="blog image">
							</a>
						</div>
						<!-- /.entry-img -->
						<div class="post-item__content">
							<div class="post-item__desc">
								{{article.content|raw}}
							</div>
							<!-- /.blog-desc -->
						</div>
						<!-- /.entry-content -->
					</div>
					<!-- /.post-item -->
					<p class="heading__desc" style="font-size: 13pt; text-align: justify; color: #000">
						Share this article:
					</p>
					<div style="width: 20% !important" class="blog-share d-flex justify-content-between mb-30 mt-20">
                        &nbsp;&nbsp;&nbsp;
						<a href="https://www.facebook.com/sharer/sharer.php?u=http://newsite.gfi-co.net/{{lang}}/articles/{{article.slug}}" 
							class"btn btn-sm btn-primary" target="_blank" style="">
							<img src="https://img.icons8.com/color/50/000000/facebook.png"/>
						</a>
						{# &nbsp;&nbsp;&nbsp;
						<a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="" data-show-count="false" target="_blank">
							<img src="https://img.icons8.com/color/50/000000/twitter-squared.png"/>
						</a> #}
						&nbsp;&nbsp;&nbsp;
						<a class=""
						href="https://twitter.com/intent/tweet?text={{article.title}} {{url}}"
						data-size="large">
							<img src="https://img.icons8.com/color/50/000000/twitter-squared.png"/>
						</a>
						<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
						&nbsp;&nbsp;&nbsp;
						<a href="https://www.linkedin.com/shareArticle?mini=true&url={{url}}&title={{title}}&summary={{summary}}&source={{source}}" 
						   onclick="window.open(this.href, 'mywin','left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;" >
							<img src="https://img.icons8.com/color/50/000000/linkedin.png"/>
						</a>
						
					</div>
					<!-- /.blog-share -->
					<!-- /.blog-comments-form -->
				</div>
				<!-- /.col-lg-8 -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container -->
	</section>
	<!-- /.blog Single -->
	<script>
		window.twttr = (function(d, s, id) {
		var js, fjs = d.getElementsByTagName(s)[0],
			t = window.twttr || {};
		if (d.getElementById(id)) return t;
		js = d.createElement(s);
		js.id = id;
		js.src = "https://platform.twitter.com/widgets.js";
		fjs.parentNode.insertBefore(js, fjs);

		t._e = [];
		t.ready = function(f) {
			t._e.push(f);
		};

		return t;
		}(document, "script", "twitter-wjs"));
	</script>

{% endblock %}
