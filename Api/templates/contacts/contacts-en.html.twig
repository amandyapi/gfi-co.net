{% extends 'layout-en.html.twig' %}

{% block title %}Info line
{% endblock %}

{% block content %}
<section class="page-title page-title-layout1 bg-overlay bg-parallax">
    <div class="bg-img"><img src="{{ asset('assets/images/page-titles/6.jpg') }}" alt="background"></div>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-9">
          <h1 class="pagetitle__heading">HOW TO CONTACT US</h1>
        </div>
      </div>
    </div>
  </section>
  
  <section class="contact-layout1 py-0">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
          <div class="contact-panel">
            <div class="contact-panel__banner d-flex align-items mb-20">
              <div class="bg-img"><img src="{{ asset('assets/images/contact/1.jpg') }}" alt="banner"></div>
              <div class="contact-panel__banner__inner">
                <h4 class="contact-panel__banner__title">Become A Partner Or Contact Us For All Your Work</h4>
                <p class="contact-panel__banner__desc">
                  Send us your concerns by message. Our customer service team will answer you as soon as possible.
                </p>
                
              </div>
            </div><!-- /.contact-panel__banner -->
            <form class="contact-panel__form" method="POST" action="#">
              <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6">
                  <div class="form-group"><input type="text" class="form-control" placeholder="Full Name" id="name" name="contact-name" required></div>
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6">
                  <div class="form-group"><input type="email" class="form-control" placeholder="Email" id="email" name="contact-email" required></div>
                </div>
                
                <div class="col-sm-6 col-md-6 col-lg-6">
                  <div class="form-group"><input type="text" class="form-control" placeholder="Phone" id="phone" name="contact-phone" required></div>
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6">
                  <div class="form-group">
                    <select class="form-control" id="objet" name="objet">
                      <option value="0">Subject</option>
                      <option value="Devis">QUOTE REQUEST</option>
                      <option value="Partenariat">PARTNERSHIP REQUES</option>
                      <option value="Informations">INFORMATION REQUEST</option>
                      <option value="Autre">OTHER REQUEST</option>
                    </select>
                  </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-12">
                  <div class="form-group">
                    <textarea class="form-control" placeholder="Write your message" id="message" name="contact-message" required></textarea>
                  </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-12">
                  <input type="submit" name="envoyer" value="Send Your Message" style="" class="btn btn__secondary btn__block">
                  <div id="info"></div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="google-map p-0 mt--120">
    <div id="map" style="height: 440px;"></div>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCqrqPZOVegy1VIdyIcndxZY9YGoK-x0Yo&callback=initMap"
      async defer></script>
  </section><!-- /.GoogleMap -->
{% endblock %}